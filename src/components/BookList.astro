---
import Book from "./Book.astro";

import { books } from "../data";
---

<ul class="max-w-4xl mx-auto my-0 px-8 3md:px-0 grid place-content-center gap-3 grid-cols-2 md:grid-cols-3">
    {
        books.map(({ id, title, img }) => {
            return (
                <li>
                    <Book id={id} title={title} img={img} />
                </li>
            );
        })
    }
</ul>
